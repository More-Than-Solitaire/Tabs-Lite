<resources>
    <!-- To see how these attributes are used, please visit https://material.io/develop/android/theming/color/ -->
    <style name="Base.Theme.TabsLite" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/darkPrimaryColor</item>
        <item name="colorOnPrimary">@color/darkPrimaryTextColor</item>
        <item name="colorOnSurface">@color/darkPrimaryTextColor</item>
        <item name="colorPrimaryDark">@color/darkPrimaryDarkColor</item>
        <item name="colorPrimaryVariant">@color/darkPrimaryLightColor</item>
        <item name="colorSurface">@color/darkSurfaceColor</item>
        <item name="colorSecondary">@color/darkSecondaryTextColor</item>
        <item name="colorSecondaryVariant">@color/darkSecondaryLightColor</item>
        <item name="colorAccent">@color/darkSecondaryDarkColor</item>
        <item name="colorOnSecondary">@color/darkSecondaryColor</item>
        <item name="colorPrimarySurface">@color/darkSurfaceColor</item>

        <item name="colorOnBackground">@color/darkEmptyStar</item>

    </style>

    <style name="Theme.WindowTranslucent" parent="Base.Theme.TabsLite"/>

    <style name="Theme.WindowTranslucent.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.TabsLite.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar"/>

    <style name="TextAppearance.TabsLite.Toolbar.Text" parent="TextAppearance.MaterialComponents.Headline5" >
        <item name="android:textColor">?attr/colorOnSurface</item>
    </style>

</resources>
